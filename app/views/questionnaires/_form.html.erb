<%= form_for(questionnaire, html: {class: ""}) do |f| %>
	<div class="card">
		<h5 class="card-header">Основной блок</h5>
		<div class="card-body">
			<div class="form-group row">
				<%= f.label :fio, "ФИО ребенка", class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :fio, class: "form-control" %>
				</div>
			</div>
			<div class="form-group row">
				<%= f.label :code, "Код", class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.number_field :code, class: "form-control" %>
				</div>
			</div>

		</div>
	</div>
	<br>
	<div class='form-group row'>
		<div class='col-sm-2'>
			<%= f.submit "Сохранить анкету", class: 'btn btn-outline-secondary' %>
		</div>
		<div class='col-sm-2'>
			<%= link_to 'Вернуться без сохранения', questionnaires_path, class: "btn btn-outline-danger" %>
		</div>
	</div>
<% end %>