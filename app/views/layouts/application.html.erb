<!DOCTYPE html>
<html>
  <head>
    <title>FAO Database</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <nav class="navbar fixed-top navbar-light bg-light">
      <%= link_to questionnaires_path, class: "navbar-brand" do %>
        <%= image_tag('FAO_logo.svg', width: '30', heigth: '30', class: 'd-inline-block align-top') %>
        FAO questionnaires database
      <% end %>
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <span class="navbar-text">
            Current user: <%= current_user.email %>
          </span>
        <% end %>
      </ul>
    </nav>
    <div class='container-fluid'>
        <div class='container'>
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= flash[:alert] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
              <%= flash[:notice] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
        </div>
      <%= yield %>
    </div>
  </body>
</html>
